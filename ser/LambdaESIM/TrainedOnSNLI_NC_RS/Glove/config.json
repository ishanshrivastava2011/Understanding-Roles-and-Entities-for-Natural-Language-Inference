{
    "dataset_reader": {
        "type": "snliModified",
        "token_indexers": {
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        }
    },
    "iterator": {
        "type": "bucket",
        "batch_size": 32,
        "sorting_keys": [
            [
                "premise",
                "num_tokens"
            ],
            [
                "hypothesis",
                "num_tokens"
            ]
        ]
    },
    "model": {
        "type": "esimModified",
        "dropout": 0.5,
        "encoder": {
            "type": "lstm",
            "bidirectional": true,
            "hidden_size": 300,
            "input_size": 300,
            "num_layers": 1
        },
        "inference_encoder": {
            "type": "lstm",
            "bidirectional": true,
            "hidden_size": 300,
            "input_size": 300,
            "num_layers": 1
        },
        "initializer": [
            [
                ".*linear_layers.*weight",
                {
                    "type": "xavier_uniform"
                }
            ],
            [
                ".*linear_layers.*bias",
                {
                    "type": "zero"
                }
            ],
            [
                ".*weight_ih.*",
                {
                    "type": "xavier_uniform"
                }
            ],
            [
                ".*weight_hh.*",
                {
                    "type": "orthogonal"
                }
            ],
            [
                ".*bias_ih.*",
                {
                    "type": "zero"
                }
            ],
            [
                ".*bias_hh.*",
                {
                    "type": "lstm_hidden_bias"
                }
            ]
        ],
        "output_feedforward": {
            "activations": "relu",
            "dropout": 0.5,
            "hidden_dims": 300,
            "input_dim": 2400,
            "num_layers": 1
        },
        "output_logit": {
            "activations": "linear",
            "hidden_dims": 3,
            "input_dim": 300,
            "num_layers": 1
        },
        "projection_feedforward": {
            "activations": "relu",
            "hidden_dims": 300,
            "input_dim": 2400,
            "num_layers": 1
        },
        "similarity_function": {
            "type": "dot_product"
        },
        "similarity_weight": 200,
        "text_field_embedder": {
            "token_embedders": {
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 300,
                    "pretrained_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.840B.300d.txt.gz",
                    "trainable": true
                }
            }
        }
    },
    "train_data_path": "/scratch/ishrivas/thesis2/cse_576_nli_project/src/data/AdversarialDatasets/Adversarial_Bigger/Combined/snli_NC_RS_train.jsonl",
    "validation_data_path": "/scratch/ishrivas/thesis2/cse_576_nli_project/src/data/AdversarialDatasets/Adversarial_Bigger/Combined/snli_NC_RS_dev.jsonl",
    "test_data_path": "/scratch/ishrivas/thesis2/cse_576_nli_project/src/data/AdversarialDatasets/Adversarial_Bigger/Combined/snli_NC_RS_test_forGloveVocab.jsonl",
    "trainer": {
        "cuda_device": 0,
        "grad_norm": 10,
        "learning_rate_scheduler": {
            "type": "reduce_on_plateau",
            "factor": 0.5,
            "mode": "max",
            "patience": 0
        },
        "num_epochs": 75,
        "num_serialized_models_to_keep": 2,
        "optimizer": {
            "type": "adam",
            "lr": 0.0004
        },
        "patience": 5,
        "validation_metric": "+accuracy"
    }
}